                      "format": "int32"
                    },
                    "data": {
                      "type": "string",
                      "default": "Account hasn't been verified yet, please verify this first!"
                    },
                    "message": {
                      "type": "string",
                      "default": "Unauthorised"
                    }
                  }
                }
              }
            }
          },
          "406": {
            "$ref": "#/components/responses/default406"
          },
          "505": {
            "$ref": "#/components/responses/default505"
