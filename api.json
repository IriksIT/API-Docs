                    "code": {
                      "type": "integer",
                      "default": 409,
                      "format": "int32"
                    },
                    "data": {
                      "type": "string",
                      "default": "Something bad broke, please contact: api@iriks-it.nl"
                    },
                    "message": {
                      "type": "string",
                      "default": "Validation Error."
                    }
                  }
                }
              }
            }
