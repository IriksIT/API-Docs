        "description": "Need a link to the documentation ? here is the most up2date link.",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "x-examples": {
                    "example-1": {
                      "success": true,
                      "error": false,
                      "code": 200,
                      "message": "documentation is available on https://docs.iriks-it.nl/"
                    }
                  },
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "default": true
                    },
                    "error": {
                      "type": "boolean",
                      "default": false
                    },
                    "code": {
                      "type": "integer",
                      "default": 200,
                      "format": "int32"
                    },
                    "message": {
                      "type": "string",
                      "default": "documentation is available on https://docs.iriks-it.nl/"
                    }
